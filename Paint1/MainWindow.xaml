<Window x:Class="Paint1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.openxml.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paint1"
        mc:Ignorable="d"
        Title="Paint App" Height="800" Width="1200">
    <Window.Resources>
        <Style x:Key="HueSliderStyle" TargetType="Slider">
            <Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="360"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Margin" Value="10,0,10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border x:Name="TrackBackground" CornerRadius="4" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1"/>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Width="20" Height="10"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0" Color="Red"/>
                        <GradientStop Offset="0.166" Color="Orange"/>
                        <GradientStop Offset="0.333" Color="Yellow"/>
                        <GradientStop Offset="0.5" Color="Green"/>
                        <GradientStop Offset="0.666" Color="Cyan"/>
                        <GradientStop Offset="0.833" Color="Blue"/>
                        <GradientStop Offset="1" Color="Violet"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical" Width="200" Background="LightGray" Margin="10">
            <TextBlock Text="Инструменты:" FontWeight="Bold" Margin="5"/>
            <Button x:Name="LineButton" Content="Кисть" Margin="5"/>
            <Button x:Name="SquareButton" Content="Квадрат" Margin="5"/>
            <Button x:Name="EllipseButton" Content="Эллипс" Margin="5"/>
            <Button x:Name="PolygonButton" Content="Многоугольник" Margin="5"/>
            <!-- Новая кнопка -->

            <TextBlock Text="Зум:" FontWeight="Bold" Margin="5"/>
            <Slider x:Name="ZoomSlider" Minimum="0.1" Maximum="5.0" Value="1.0" Margin="5"/>

            <TextBlock Text="Цвета:" FontWeight="Bold" Margin="5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Rectangle x:Name="StrokePreview" Grid.Column="0" Width="40" Height="40" Fill="Black" Stroke="Black" StrokeThickness="2" Margin="5" MouseLeftButtonDown="StrokePreview_MouseLeftButtonDown"/>
                <Rectangle x:Name="FillPreview" Grid.Column="1" Width="40" Height="40" Fill="White" Stroke="Black" StrokeThickness="2" Margin="5" MouseLeftButtonDown="FillPreview_MouseLeftButtonDown"/>
                <Slider x:Name="HueSlider" Grid.Column="3" Style="{StaticResource HueSliderStyle}" Height="150" ValueChanged="HueSlider_ValueChanged"/>
            </Grid>

            <TextBlock Text="Квадрат тона:" FontWeight="Bold" Margin="5"/>
            <Canvas x:Name="SVSquare" Width="160" Height="160" Margin="5" Background="Transparent" MouseLeftButtonDown="SVSquare_MouseLeftButtonDown" MouseMove="SVSquare_MouseMove" MouseLeftButtonUp="SVSquare_MouseLeftButtonUp">
                <Rectangle x:Name="SVMarker" Width="10" Height="10" Fill="Black" Opacity="0.8" Stroke="White" StrokeThickness="1"/>
            </Canvas>
        </StackPanel>

        <Canvas x:Name="Canvas1" Grid.Column="1" Background="White" MouseRightButtonDown="Canvas_MouseRightButtonDown"/>
    </Grid>
</Window>
